name 'linux-api-headers'
org 'amylum'

license 'COPYING'

kernel_url_base = 'https://cdn.kernel.org/pub/linux/kernel/v4.x/testing'
kernel_version = '4.9-rc4'

source(
  type: 'tar',
  url: "#{kernel_url_base}/linux-#{kernel_version}.tar.xz"
)

harden

patch 'musl.patch'

build do
  run 'make mrproper'
  run 'make headers_check'
  run "make INSTALL_HDR_PATH=#{releasedir}/usr headers_install"
  rm 'usr/include/drm'
  run "rm -rf #{Dir.glob(["#{releasedir}/**/.install", "#{releasedir}/**/..install.cmd"])}"
end

test do
  # TODO: add tests
end
