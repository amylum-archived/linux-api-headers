name 'linux-api-headers'
org 'amylum'

license 'COPYING'

kernel_url_base = 'https://cdn.kernel.org/pub/linux/kernel/v4.x'
kernel_version = '4.19'

source(
  type: 'tar',
  url: "#{kernel_url_base}/linux-#{kernel_version}.tar.xz",
  checksum: '0c68f5655528aed4f99dae71a5b259edc93239fa899e2df79c055275c21749a1'
)

harden

patch 'musl.patch'
patch 'elf.patch'
patch 'if_arp.patch'

build do
  run 'make mrproper'
  run 'make headers_check'
  run "make INSTALL_HDR_PATH=#{releasedir}/usr headers_install"
  rm 'usr/include/drm'
  run "rm -rf #{Dir.glob(["#{releasedir}/**/.install", "#{releasedir}/**/..install.cmd"])}"
end

test do
  # TODO: add tests
end
